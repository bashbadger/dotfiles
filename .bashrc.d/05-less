# less options
export LESS="iFRSMJQg"

# Summary:
# -i: ignore case in search unless uppercase is used
# -F: quit immediately if file fits on one screen
# -R: enable coloured output
# -S: truncate long lines
# -X: don't clear screen on exit # Not in use
# -M: more verbose status line
# -J: add status column on left, show search hits and marks
# -Q: quiet terminal bell
# -g: highlight searches
# --no-vbell: disable visual bell
# --save-marks: save marks between invocations of less
# --use-color: colour
# --status-line: highlight entire line containing a mark
